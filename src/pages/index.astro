const description = "Aprende a programar con LibreScript, un lenguaje de programación divertido y fácil de aprender, ¡todo en español!";
import "../fonts/font-face.css";
import PericoIcon from "../icons/perico.astro";
import BookIcon from "../icons/book.astro";
import GithubIcon from "../icons/github.astro";
import TerminalIcon from "../icons/terminal.astro";
import PersonalGithubIcon from "../icons/linkgithub.astro";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="shortcut icon" href="favicon.svg" type="image/x-icon" />
  </head>
  <body class="">
    <main class="">
      <section class="hero-section">
        <div class="">
          <div class="titles-container">
            <h1 class="title">{title}</h1>
